{
  "name": "mytripjournal-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest --env=jsdom --coverage",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test-watch": "jest --watchAll=true --coverage",
    "commit": "git-cz",
    "prepare": "husky install",
    "c": "yarn commit --no-verify",
    "amend": "git commit --amend --no-verify --no-edit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toursbylocals/mytripjournal-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/toursbylocals/mytripjournal-api/issues"
  },
  "homepage": "https://github.com/toursbylocals/mytripjournal-api#readme",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^8.4.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog-emoji"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "yarn prettier --write",
      "yarn test --watchAll=false --findRelatedTests --bail"
    ]
  }
}